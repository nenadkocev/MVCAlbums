@model primerKolokviumska2.Models.AddUserToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <h3>Select user</h3>
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <br />
    <br />
    <div class="form-group">

        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.roles), new { @class = "form-control"})
    </div>
    <input type="submit" value="Add Role" class="btn btn-danger" />
}

